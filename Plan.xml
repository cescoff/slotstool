<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<blue-print>
    <distance-unit>mm</distance-unit>
	
	<!-- ################################### -->
	<!-- ###         MAIN LAYER         #### -->
	<!-- ################################### -->
	
	<!-- Default point -->
	<point x="${borderdistance}" y="${borderdistance}" name="GlobalTopLeftPoint" layer="Main" />

	<!-- Cut points -->
<!--	<point x="${CutLeftX}" y="${borderdistance}+${fullLaserCutLength}" name="CutLeftTop" layer="Main" />
	<point x="${CutLeftX}" y="${borderdistance}+2*${upRight}+${seatWidth}" name="CutLeftBottom" layer="Main" />
	<point x="${CutRightX}" y="${borderdistance}" name="CutRightTop" layer="Main" />
	<point x="${CutRightX}" y="${borderdistance}+2*${upRight}+${seatWidth}" name="CutRightBottom" layer="Main" />-->

	<!-- Seat hinge crenel -->
	<hinge 
			name="SeatTopHinge" 
			min-width="${hingeToothWidth}" 
			head-height="${seatHingeToothHeight}" 
			border-offset="${woodSpan}" 
			direction="backward" 
			action="CUT" 
			axle-distance1="${PR}"
			axle-distance2="${seatMountLength}+${sliderExtraSpan}"
			axle-layer="MiddleFace"
			thickness="${chairThickness}"
			head-span="Math.max(${chairThickness}/5 + ${woodSpan}/2, 6.0)"
			radius="${axleRadius}"
			layer="Main"
	                auto-axle-distance-cut="false"
			sharp-angle-layer="BottomFace">
		<point1 x="GlobalTopLeftPoint//Center//+0" y="GlobalTopLeftPoint//Center//0"/>
		<point2 x="GlobalTopLeftPoint//Center//+0" y="GlobalTopLeftPoint//Center//(${seatMountWidth}-${fullHandleLength})/2"/>
	</hinge>

	<hinge 
			name="SeatBottomHinge" 
			min-width="${hingeToothWidth}" 
			head-height="${seatHingeToothHeight}" 
			border-offset="${woodSpan}" 
			direction="backward" 
			action="CUT" 
			axle-distance1="${PR}"
			axle-distance2="${seatMountLength}"
			axle-layer="MiddleFace"
			thickness="${chairThickness}"
			head-span="Math.max(${chairThickness}/5 + ${woodSpan}/2, 6.0)"
			radius="${axleRadius}"
			layer="Main"
		        auto-axle-distance-cut="false"
			sharp-angle-layer="BottomFace">
		<point1 x="GlobalTopLeftPoint//Center//+0" y="GlobalTopLeftPoint//Center//(${seatMountWidth}+${fullHandleLength})/2"/>
		<point2 x="GlobalTopLeftPoint//Center//+0" y="GlobalTopLeftPoint//Center//${seatMountWidth}"/>
	</hinge>


	<!-- BODY FRAME -->
	<path name="BodyFrame" layer="Main" action="CUT" >
		<point x="SeatTopHingeTopLeft//Center//0" y="SeatTopHingeTopLeft//Center//0" />
		<point x="SeatTopHingeTopRight//Center//${upRight}/2++${sliderExtraSpan}" y="SeatTopHingeTopRight//Center//0" />
		<point x="SeatBottomHingeBottomRight//Center//${upRight}/2+${sliderExtraSpan}" y="SeatBottomHingeBottomRight//Center//0" />
		<point x="SeatBottomHingeBottomLeft//Center//0" y="SeatBottomHingeBottomLeft//Center//0" />
		<point x="SeatTopHingeTopLeft//Center//0" y="SeatTopHingeTopLeft//Center//0" />
	</path>
	<arc name="RoundCornerTopLeft" layer="Main" radius="${roundCornersRadius}" action="CUT">
		<center x="SeatTopHingeTopLeft//Center//${roundCornersRadius}" y="SeatTopHingeTopLeft//Center//${roundCornersRadius}" />
		<point1 x="SeatTopHingeTopLeft//Center//0" y="SeatTopHingeTopLeft//Center//${roundCornersRadius}" />
		<point2 x="SeatTopHingeTopLeft//Center//${roundCornersRadius}" y="SeatTopHingeTopLeft//Center//0" />
	</arc>
	<arc name="RoundCornerTopRight" layer="Main" radius="${roundCornersRadius}" action="CUT">
		<center x="SeatTopHingeTopRight//Center//-${roundCornersRadius}+${upRight}/2+${sliderExtraSpan}" y="SeatTopHingeTopRight//Center//${roundCornersRadius}" />
		<point1 x="SeatTopHingeTopRight//Center//-${roundCornersRadius}+${upRight}/2+${sliderExtraSpan}" y="SeatTopHingeTopRight//Center//0" />
		<point2 x="SeatTopHingeTopRight//Center//+${upRight}/2" y="SeatTopHingeTopRight//Center//${roundCornersRadius}" />
	</arc>
	<arc name="RoundCornerBottomLeft" layer="Main" radius="${roundCornersRadius}" action="CUT">
		<center x="SeatBottomHingeBottomLeft//Center//${roundCornersRadius}" y="SeatBottomHingeBottomLeft//Center//-${roundCornersRadius}" />
		<point1 x="SeatBottomHingeBottomLeft//Center//${roundCornersRadius}" y="SeatBottomHingeBottomLeft//Center//0" />
		<point2 x="SeatBottomHingeBottomLeft//Center//0" y="SeatBottomHingeBottomLeft//Center//-${roundCornersRadius}" />
	</arc>
	<arc name="RoundCornerBottomRight" layer="Main" radius="${roundCornersRadius}" action="CUT">
		<center x="SeatBottomHingeBottomRight//Center//-${roundCornersRadius}+${upRight}/2+${sliderExtraSpan}" y="SeatBottomHingeBottomRight//Center//-${roundCornersRadius}" />
		<point1 x="SeatBottomHingeBottomRight//Center//+${upRight}/2+${sliderExtraSpan}" y="SeatBottomHingeBottomRight//Center//-${roundCornersRadius}" />
		<point2 x="SeatBottomHingeBottomRight//Center//-${roundCornersRadius}+${upRight}/2" y="SeatBottomHingeBottomRight//Center//0" />
	</arc>
	
  	<!-- Leg -->
	<path name="LegFrame" layer="Main" action="CUT" >
		<point x="SeatTopHingeBottomLeft//Center//+${upRight}" y="SeatTopHingeBottomLeft//Center//0" />
		<point x="SeatTopHingeBottomRight//Center//+${sliderExtraSpan}" y="SeatTopHingeBottomRight//Center//0" />
		<point x="SeatBottomHingeTopRight//Center//+${sliderExtraSpan}" y="SeatBottomHingeTopRight//Center//0" />
		<point x="SeatBottomHingeTopLeft//Center//+${upRight}" y="SeatBottomHingeTopLeft//Center//0" />
	</path>

	<path name="LegTopFrame" layer="TopLeg" action="CUT" >
		<point x="SeatTopHingeBottomLeft//Center//+${upRight}" y="SeatTopHingeBottomLeft//Center//0" />
		<point x="SeatBottomHingeTopLeft//Center//+${upRight}" y="SeatBottomHingeTopLeft//Center//0" />
	</path>

	<path name="LegMiddleFrameTop" layer="FullLeg" action="CUT" >
		<point x="SeatTopHingeBottomLeft//Center//0" y="SeatTopHingeBottomLeft//Center//0" />
		<point x="SeatTopHingeBottomLeft//Center//+${upRight}" y="SeatTopHingeBottomLeft//Center//0" />
	</path>

	<path name="LegMiddleFrameBottom" layer="FullLeg" action="CUT" >
		<point x="SeatBottomHingeTopLeft//Center//0" y="SeatBottomHingeTopLeft//Center//0" />
		<point x="SeatBottomHingeTopLeft//Center//+${upRight}" y="SeatBottomHingeTopLeft//Center//0" />
	</path>
  
	<!-- Sliders -->
	
  
	<!-- HANDLE -->
	<circle center-x="SeatTopHingeBottomAxleCut//Center//-(4/3)*${upRight}" center-y="SeatTopHingeBottomAxleCut//Center//+${handleHeight}/2" radius="${handleHeight}/2" action="CUT" name="HandCarryTopCircle" layer="Cover"/>
	<circle center-x="SeatBottomHingeTopAxleCut//Center//-(4/3)*${upRight}" center-y="SeatBottomHingeTopAxleCut//Center//-${handleHeight}/2" radius="${handleHeight}/2" action="CUT" name="HandCarryBottomCircle" layer="Cover"/>
	<path name="HandCarryTopLeft" layer="Cover" action="CUT" >
		<point x="HandCarryTopCircle//RadiusLeft//0" y="HandCarryTopCircle//RadiusLeft//0" />
		<point x="HandCarryBottomCircle//RadiusLeft//0" y="HandCarryBottomCircle//RadiusLeft//0" />
	</path>
	<path name="HandCarryTopRight" layer="Cover" action="CUT" >
		<point x="HandCarryTopCircle//RadiusRight//0" y="HandCarryTopCircle//RadiusRight//0" />
		<point x="HandCarryBottomCircle//RadiusRight//0" y="HandCarryBottomCircle//RadiusRight//0" />
	</path>
	
</blue-print>
