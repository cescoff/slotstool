<project>
    <name>OriStool</name>
    <thumbnail-url>https://github.com/cescoff/slotstool/raw/master/stool_thumbnail.jpg</thumbnail-url>
    <previews>
        <url>https://github.com/cescoff/slotstool/raw/master/stool_preview.jpg</url>
